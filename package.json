{
  "name": "appointment-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "migrate:to-production": "ts-node --project scripts/tsconfig.json scripts/migrateToProduction.ts",
    "migrate:verify": "ts-node --project scripts/tsconfig.json scripts/migrateToProduction.ts verify",
    "migrate:quick": "./scripts/quick-migrate.sh",
    "deploy:vercel": "./scripts/deploy-vercel.sh",
    "deploy:vercel:prod": "./scripts/deploy-vercel.sh prod",
    "db:backup": "mongodump --uri=\"mongodb://localhost:27017/appointment-system\" --out=./database-backups/$(date +%Y%m%d_%H%M%S)",
    "db:restore": "mongorestore --uri=\"$MONGODB_URI\" --drop ./database-backups/latest",
    "redis:check": "ts-node --project scripts/tsconfig.json scripts/checkRedis.ts",
    "admin:create": "ts-node --project scripts/tsconfig.json scripts/createAdminUser.ts",
    "admin:verify": "ts-node --project scripts/tsconfig.json scripts/verifyAdminUser.ts",
    "db:test": "ts-node --project scripts/tsconfig.json scripts/testMongoConnection.ts",
    "git:check": "ts-node --project scripts/tsconfig.json scripts/checkGitIgnore.ts"
  },
