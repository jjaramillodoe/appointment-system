# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Production MongoDB URI (MongoDB Atlas recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/appointment-system?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Mapbox Configuration (for geocoding)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-access-token

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Optional: Redis Configuration (if using Redis)
REDIS_URL=your-redis-url

# Optional: Logging
LOG_LEVEL=info
